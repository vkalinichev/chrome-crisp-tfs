.options
    width 15rem
    padding 8px 16px
    background linear-gradient(to bottom, #fafafa, #f4f4f4)

    &__header
        font-size 1.5rem
        font-weight 100
        margin 0 0 1rem

    &__logo
        display inline-block
        width 32px
        height @width
        vertical-align middle

        svg
            width inherit
            height inherit
            overflow visible

    &__title
        display inline-block
        vertical-align middle
        margin 0 0 0 .4rem

    &__list
        display flex
        flex-direction column
        margin .4rem 0 .8rem
        padding 0
        list-style none

    &__item
        margin-bottom .4rem

    &__list-item
        display flex
        align-items center
        margin 0 0 .33rem .4rem

    &__marker
        width 15px
        height @width
        padding 0

        background #fff
        border none
        border-radius 2px
        box-shadow 0 0 0 .7px hsla( black, .1 ) inset

        &:hover
            -webkit-filter: brightness(.95)

    &__input
        flex 1
        margin 0 .5rem


    &__buttons
        text-align center
        margin 1rem 0 .5rem